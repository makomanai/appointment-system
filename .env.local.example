# OpenAI API Key
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Supabase設定（新システム）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Apps Script Endpoint（旧システム - 移行完了後は削除可能）
# 読み取り用
GAS_ENDPOINT=https://script.google.com/macros/s/xxx/exec
# 書き込み用
GAS_ENDPOINT_WRITE=https://script.google.com/macros/s/xxx/exec

# マスタースプレッドシートID（旧システム - 移行完了後は削除可能）
MASTER_SPREADSHEET_ID=your-spreadsheet-id

# NextAuth設定
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3001

# 認証ユーザー（形式: email:hashedPassword）
ALLOWED_USERS="user@example.com:$2b$10$hashedpassword"

# 招待コード（新規登録時に必要）
INVITATION_CODE=your-invitation-code
